#include<stdio.h>
#include<math.h>
#include<stdlib.h>
int board[20],count;

int main()
{
 int n,i,j;
 void queen(int row,int n);
 printf(" - N Queens Problem Using Backtracking -");
 printf("\n\nEnter number of Queens:");
 scanf("%d",&n);
 queen(1,n);
 return 0;
}

//function for printing the solution
void print(int n)
{
 int i,j;
 printf("\n\nSolution %d:\n\n",++count);
 for(i=1;i<=n;++i)
  printf("\t%d",i);
 for(i=1;i<=n;++i)
 {
  printf("\n\n%d",i);
  for(j=1;j<=n;++j) 
  {
   if(board[i]==j)
    printf("\tQ");
   else
    printf("\t -"); 
  }
 }
}
